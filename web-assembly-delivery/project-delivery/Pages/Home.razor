@page "/home"

@inherits LayoutComponentBase

<PageTitle>HomePage</PageTitle>
    <!-- Categories -->
    <div class="container mx-auto px-4 py-8">
        <h2 class="text-2xl font-bold mb-6">Categorias</h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
            @foreach (var category in categories)
            {
                <div class="bg-white rounded-lg shadow-sm p-4 text-center hover:shadow-md transition-shadow cursor-pointer">
                    <div class="w-16 h-16 mx-auto mb-2">
                        <img src="@category.Icon" alt="@category.Name" class="w-full h-full object-contain">
                    </div>
                    <p class="font-medium">@category.Name</p>
                </div>
            }
        </div>
    </div>

    <!-- Restaurants -->
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">Restaurantes</h2>
            <a href="#" class="text-red-600 font-medium">Ver todos</a>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            @foreach (var restaurant in restaurants)
            {
                <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
                    <div class="relative">
                        <img src="@restaurant.Image" alt="@restaurant.Name" class="w-full h-48 object-cover">
                        <div class="absolute top-2 right-2 bg-white rounded-full px-2 py-1 flex items-center text-xs font-bold">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                            <span class="ml-1">@restaurant.Rating.ToString("0.0")</span>
                        </div>
                    </div>
                    <div class="p-4">
                        <h3 class="font-bold text-lg mb-1">@restaurant.Name</h3>
                        <div class="flex items-center text-sm text-gray-600 mb-2">
                            <span>@restaurant.Category</span>
                            <span class="mx-2">•</span>
                            <span>@restaurant.DeliveryTime min</span>
                        </div>
                        <div class="flex items-center text-sm">
                            <span class="text-gray-600">@restaurant.DeliveryFee</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Promotions -->
    <div class="container mx-auto px-4 py-8">
        <h2 class="text-2xl font-bold mb-6">Promoções</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            @foreach (var promo in promotions)
            {
                <div class="bg-white rounded-lg overflow-hidden shadow-sm">
                    <img src="@promo.Image" alt="@promo.Title" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="font-bold text-lg mb-2">@promo.Title</h3>
                        <p class="text-gray-600 mb-4">@promo.Description</p>
                        <button class="text-red-600 font-medium">Ver oferta</button>
                    </div>
                </div>
            }
        </div>
    </div>

    @code {
    private List<Category> categories = new()
    {
        new Category { Name = "Pizza", Icon = "images/icons/pizza.png" },
        new Category { Name = "Hambúrguer", Icon = "images/icons/burger.png" },
        new Category { Name = "Sushi", Icon = "images/icons/sushi.png" },
        new Category { Name = "Marmita", Icon = "images/icons/meal.png" },
        new Category { Name = "Açaí", Icon = "images/icons/acai.png" },
        new Category { Name = "Bebidas", Icon = "images/icons/drinks.png" }
    };

    private List<Restaurant> restaurants = new()
    {
        new Restaurant { Name = "Pizzaria Itália", Image = "images/restaurants/pizzaria.jpg", Rating = 4.5, Category = "Pizza", DeliveryTime = 30, DeliveryFee = "R$ 5,00" },
        new Restaurant { Name = "Burger House", Image = "images/restaurants/burger.jpg", Rating = 4.8, Category = "Hambúrguer", DeliveryTime = 25, DeliveryFee = "Grátis" },
        new Restaurant { Name = "Sushi Yama", Image = "images/restaurants/sushi.jpg", Rating = 4.6, Category = "Sushi", DeliveryTime = 40, DeliveryFee = "R$ 7,00" }
    };

    private List<Promotion> promotions = new()
    {
        new Promotion { Title = "50% off em Pizzas", Description = "Aproveite meia pizza por metade do preço", Image = "images/promotions/pizza-promo.jpg" },
        new Promotion { Title = "Frete grátis no Sushi", Description = "Pedidos acima de R$50", Image = "images/promotions/sushi-promo.jpg" }
    };
    
}